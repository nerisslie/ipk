<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="INDEKS PRESTASI"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/finaltable"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ipkTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:orientation="vertical"
            android:stretchColumns="1">

            <TableRow
                android:background="@drawable/mainmenu">

                <TextView
                    android:layout_column="1"
                    android:text="Semester 1"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:text="20 SKS"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="3,67"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="A"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"/>
            </TableRow>

            <TableRow
                android:background="#FFF">

                <TextView
                    android:layout_column="1"
                    android:text="Semester 2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:text="21 SKS"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="3,33"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="B+"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"/>
            </TableRow>

            <TableRow
                android:background="@drawable/mainmenu">

                <TextView
                    android:layout_column="1"
                    android:text="Semester 3"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:text="22 SKS"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="3,00"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="B"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="NILAI AKHIR"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#cd6675"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/finalTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:orientation="vertical"
            android:stretchColumns="1">

            <TableRow
                android:background="@drawable/mainmenu">

                <TextView
                    android:layout_column="1"
                    android:text="IPS"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:text="8 SKS"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="3,67"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="B+"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"/>
            </TableRow>

            <TableRow
                android:background="#FFF">

                <TextView
                    android:layout_column="1"
                    android:text="IPK"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:text="36 SKS"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="3,00"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:text="B"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/predict_button"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="68dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="PREDIKSI IPK"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/buttonpredict"
        android:textAlignment="center"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:attr/listDivider" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:labelVisibilityMode="selected"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/maincolor"
        app:itemIconTint="@drawable/buttonview"
        app:itemTextColor="@drawable/buttonview"
        app:menu="@menu/bottomnavigation_menu" />


</RelativeLayout>